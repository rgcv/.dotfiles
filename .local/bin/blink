#!/bin/sh
# requires:
#  sway:
#    jq (jq, parse tree for window id)
#  i3:
#    any window compositor (picom, compton, xcompmgr, ...)
#    xdotool (xdotool, window identification)
#    transset-df (transset-df, setting transparency)
set -eu

getwindow() {
  if [ -n "${SWAYSOCK-}" ]; then
    swaymsg -t get_tree | jq -r '..|select(.focused?)|.id // "__focused__"'
  else
    xdotool getactivewindow
  fi
}

setopacity() {
  if [ -n "${SWAYSOCK-}" ]; then
    swaymsg -q "[con_id=$window] opacity ${1-1}"
  else
    transset-df -i "$window" "${1-1}"
  fi
}

window=$(getwindow)
delay=0.2
opacity=0.75
times=2

usage() {
  cat <<USAGE
Usage: ${0##*/} [-d <delay=$delay>] [-o <opacity=$opacity]
    [-t <times=$times>]
USAGE
  exit "${1-0}"
}

while getopts "d:o:t:" opt; do
  case $opt in
    d) delay=$OPTARG   ;;
    o) opacity=$OPTARG ;;
    t) times=$OPTARG   ;;
    ?) usage 1 ;;
  esac
done; shift $((OPTIND - 1))

for _ in $(awk -v stop="$times" 'BEGIN {for(i=1;i<=stop;++i) print i}'); do
  sleep "$delay"
  setopacity "$opacity"
  sleep "$delay"
  setopacity 1
done

