#!/bin/sh
set -e

query() {
  if [ -n "$SWAYSOCK" ]; then
    ln=$(swaymsg -t get_inputs |\
      jq -r 'map(select(.type=="keyboard"))|first|.xkb_active_layout_name')
    case $ln in
      "English (US, intl"*) l=ENG; v=US ;;
      "English (US)"      ) l=ENG; v=INTL ;;
                         *) l=$ln; v=     ;;
    esac
    case $1 in
      layout)  echo "$l" ;;
      variant) echo "$v" ;;
    esac
    unset ln l v
  else
    setxkbmap -query | awk '/^'"$1"':/ {print toupper($2)}';
  fi
}

if [ -z "${ICON-}" ]; then
  icon=ï„œ
  [ "${markup-}" = pango ] && icon="<b>$icon</b>"
else
  icon=$ICON
fi

layout=$(query layout)
variant=$(query variant)

text="$icon $layout"
[ -n "$variant" ] && echo "$text ($variant)" || echo "$text"
echo "$text"
